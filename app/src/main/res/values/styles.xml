<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- themes for text views -->
    <style name="HeaderTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="ContentTextView">
        <item name="android:layout_margin">12dp</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="ContentTextViewEts" parent="ContentTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="ContentTextViewDeadline" parent="ContentTextView">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <!-- Themes for different branches -->


    <attr name="insignia" format="reference" />
    <attr name="add" format="reference"/>
    <attr name="share" format="reference"/>
    <attr name="settings" format="reference"/>
    <attr name="camera" format="reference"/>
    <attr name="help" format="reference"/>
    <attr name="branchBackground" format="color"/>

    <style name="ArmyTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#424242</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">#FFEA00</item>
        <item name="insignia">@drawable/insignia_pending</item>
        <item name="add">@drawable/ic_add_blk</item>
        <item name="share">@drawable/ic_share_black_24dp</item>
        <item name="settings">@drawable/ic_settings_black_24dp</item>
        <item name="camera">@drawable/ic_camera_blk</item>
        <item name="help">@drawable/ic_help</item>
        <item name="branchBackground">#A5D6A7</item>
    </style>

    <style name="MarineTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#F44336</item>
        <item name="colorPrimaryDark">#B71C1C</item>
        <item name="colorAccent">#304FFE</item>
        <item name="insignia">@drawable/insignia_pending</item>
        <item name="add">@drawable/ic_add_blk</item>
        <item name="share">@drawable/ic_share_black_24dp</item>
        <item name="settings">@drawable/ic_settings_black_24dp</item>
        <item name="camera">@drawable/ic_camera_blk</item>
        <item name="help">@drawable/ic_help</item>
        <item name="branchBackground">#BCAAA4</item>
    </style>

    <style name="NavyTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#2196F3</item>
        <item name="colorPrimaryDark">#1565C0</item>
        <item name="colorAccent">#FFEA00</item>
        <item name="insignia">@drawable/insignia_pending</item>
        <item name="add">@drawable/ic_add_blk</item>
        <item name="share">@drawable/ic_share_black_24dp</item>
        <item name="settings">@drawable/ic_settings_black_24dp</item>
        <item name="camera">@drawable/ic_camera_blk</item>
        <item name="help">@drawable/ic_help</item>
        <item name="branchBackground">#81D4FA</item>
    </style>

    <style name="AirForceTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#0288D1</item>
        <item name="colorPrimaryDark">#01579B</item>
        <item name="colorAccent">#BDBDBD</item>
        <item name="insignia">@drawable/insignia_pending</item>
        <item name="add">@drawable/ic_add_blk</item>
        <item name="share">@drawable/ic_share_black_24dp</item>
        <item name="settings">@drawable/ic_settings_black_24dp</item>
        <item name="camera">@drawable/ic_camera_blk</item>
        <item name="help">@drawable/ic_help</item>
        <item name="branchBackground">#84FFFF</item>
    </style>

</resources>
